{
    "format_version": "1.16.100",
    "minecraft:block": {
        "components": {
            "minecraft:block_light_filter": 0,
            "minecraft:creative_category": {
                "category": "construction",
                "group": "itemGroup.name.trapdoor"
            },
            "minecraft:destroy_time": 1,
            "minecraft:map_color": "#39FAFF",
            "minecraft:material_instances": {
                "*": {
                    "ambient_occlusion": false,
                    "render_method": "alpha_test",
                    "texture": "flaming_trapdoor"
                }
            },
            "minecraft:on_player_placing": {
                "event": "placement_state"
            }
        },
        "description": {
            "identifier": "fk:flaming_trapdoor",
            "properties": {
                "fk:direction": [
                    2,
                    3,
                    4,
                    5
                ],
                "fk:state": [
                    "lower",
                    "upper",
                    "lower_open",
                    "upper_open"
                ]
            }
        },
        "events": {
            "lower": {
                "sequence": [
                    {
                        "set_block_property": {
                            "fk:state": "'lower'"
                        }
                    },
                    {
                        "run_command": {
                            "command": [
                                "playsound random.door_close @a[r=5] ~ ~ ~ 0.4 1.0"
                            ]
                        }
                    }
                ]
            },
            "lower_open": {
                "sequence": [
                    {
                        "set_block_property": {
                            "fk:state": "'lower_open'"
                        }
                    },
                    {
                        "run_command": {
                            "command": [
                                "playsound random.door_open @a[r=5] ~ ~ ~ 0.4 1.0"
                            ]
                        }
                    }
                ]
            },
            "placement_state": {
                "sequence": [
                    {
                        "set_block_property": {
                            "fk:direction": "(q.cardinal_facing_2d)"
                        }
                    },
                    {
                        "condition": "q.target_x_rotation <=0",
                        "trigger": {
                            "event": "upper"
                        }
                    }
                ]
            },
            "upper": {
                "sequence": [
                    {
                        "set_block_property": {
                            "fk:state": "'upper'"
                        }
                    },
                    {
                        "run_command": {
                            "command": [
                                "playsound random.door_close @a[r=5] ~ ~ ~ 0.4 1.0"
                            ]
                        }
                    }
                ]
            },
            "upper_open": {
                "sequence": [
                    {
                        "set_block_property": {
                            "fk:state": "'upper_open'"
                        }
                    },
                    {
                        "run_command": {
                            "command": [
                                "playsound random.door_open @a[r=5] ~ ~ ~ 0.4 1.0"
                            ]
                        }
                    }
                ]
            }
        },
        "permutations": [
            {
                "components": {
                    "minecraft:rotation": [
                        0,
                        0,
                        0
                    ]
                },
                "condition": "q.block_property('fk:direction') == 2"
            },
            {
                "components": {
                    "minecraft:rotation": [
                        0,
                        180,
                        0
                    ]
                },
                "condition": "q.block_property('fk:direction') == 3"
            },
            {
                "components": {
                    "minecraft:rotation": [
                        0,
                        90,
                        0
                    ]
                },
                "condition": "q.block_property('fk:direction') == 4"
            },
            {
                "components": {
                    "minecraft:rotation": [
                        0,
                        270,
                        0
                    ]
                },
                "condition": "q.block_property('fk:direction') == 5"
            },
            {
                "components": {
                    "minecraft:aim_collision": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            3,
                            16
                        ]
                    },
                    "minecraft:block_collision": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            3,
                            16
                        ]
                    },
                    "minecraft:geometry": "geometry.trapdoor_lower",
                    "minecraft:on_interact": {
                        "event": "lower_open"
                    }
                },
                "condition": "q.block_property('fk:state') == 'lower'"
            },
            {
                "components": {
                    "minecraft:aim_collision": {
                        "origin": [
                            -8,
                            14,
                            -8
                        ],
                        "size": [
                            16,
                            2,
                            16
                        ]
                    },
                    "minecraft:block_collision": {
                        "origin": [
                            -8,
                            14,
                            -8
                        ],
                        "size": [
                            16,
                            2,
                            16
                        ]
                    },
                    "minecraft:geometry": "geometry.trapdoor",
                    "minecraft:on_interact": {
                        "event": "upper_open"
                    }
                },
                "condition": "q.block_property('fk:state') == 'upper'"
            },
            {
                "components": {
                    "minecraft:aim_collision": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            16,
                            2
                        ]
                    },
                    "minecraft:block_collision": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            16,
                            2
                        ]
                    },
                    "minecraft:block_light_filter": 0,
                    "minecraft:geometry": "geometry.trapdoor_lower_open",
                    "minecraft:on_interact": {
                        "event": "lower"
                    }
                },
                "condition": "q.block_property('fk:state') == 'lower_open'"
            },
            {
                "components": {
                    "minecraft:aim_collision": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            16,
                            2
                        ]
                    },
                    "minecraft:block_collision": {
                        "origin": [
                            -8,
                            0,
                            -8
                        ],
                        "size": [
                            16,
                            16,
                            2
                        ]
                    },
                    "minecraft:block_light_filter": 0,
                    "minecraft:geometry": "geometry.trapdoor_open",
                    "minecraft:on_interact": {
                        "event": "upper"
                    }
                },
                "condition": "q.block_property('fk:state') == 'upper_open'"
            }
        ]
    }
}