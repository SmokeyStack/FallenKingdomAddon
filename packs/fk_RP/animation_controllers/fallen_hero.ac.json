{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.fallen_hero.move": {
            "initial_state": "idle",
            "states": {
                "idle": {
                    "transitions": [
                        {
                            "moving": "q.modified_move_speed > 0.1"
                        }
                    ]
                },
                "moving": {
                    "animations": [
                        "walk"
                    ],
                    "transitions": [
                        {
                            "idle": "q.modified_move_speed < 0.1"
                        }
                    ]
                }
            }
        },
        "controller.animation.fallen_hero.look_at_target": {
            "initial_state": "idle",
            "states": {
                "idle": {
                    "animations": [
                        "look_at_target"
                    ]
                }
            }
        }
    }
}