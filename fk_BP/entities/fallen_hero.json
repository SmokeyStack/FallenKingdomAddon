{
	"format_version": "1.16.0",
	"minecraft:entity": {
		"description": {
			"identifier": "fk:fallen_hero",
			"is_spawnable": true,
			"is_summonable": true,
			"is_experimental": false,
			"animations": {
				"dead": "controller.animation.fallen_hero_death"
			},
			"scripts": {
				"animate": [
					{
						"dead": "!query.is_alive"
					}
				]
			}
		},
		"component_groups": {
			"angry": {
				"minecraft:angry": {
					"angry_sound": "angry",
					"broadcast_anger": true,
					"broadcast_anger_on_attack": true,
					"broadcast_anger_on_being_attacked": true,
					"broadcast_range": 16,
					"broadcast_targets": [
						"fallen_hero"
					],
					"calm_event": {
						"event": "become_calm_event",
						"target": "self"
					},
					"duration": 30,
					"filters": {
						"all_of": [
							{
								"test": "is_family",
								"operator": "!=",
								"value": "fallen_hero",
								"subject": "other"
							}
						]
					},
					"sound_interval": {
						"range_min": 2.0,
						"range_max": 5.0
					}
				}
			},
			"fallen_hero_magic": {
				"minecraft:behavior.ranged_attack": {
					"attack_interval_min": 1.0,
					"attack_interval_max": 5.0,
					"attack_radius": 15.0,
					"priority": 0,
					"speed_multiplier": 1.5
				},
				"minecraft:mark_variant": {
					"value": 2
				},
				"minecraft:shooter": {
					"def": "fk:fallen_hero_spell"
				}
			},
			"fallen_hero_melee": {
				"minecraft:attack": {
					"damage": 15
				},
				"minecraft:behavior.melee_attack": {
					"priority": 3,
					"speed_multiplier": 1.5,
					"track_target": true
				},
				"minecraft:equipment": {
					"table": "loot_tables/entities/fallen_hero_melee_gear.json"
				},
				"minecraft:mark_variant": {
					"value": 0
				}
			},
			"fallen_hero_range": {
				"minecraft:behavior.charge_held_item": {
					"items": [
						"minecraft:arrow"
					],
					"priority": 3
				},
				"minecraft:behavior.ranged_attack": {
					"attack_interval_min": 1.0,
					"attack_interval_max": 1.5,
					"attack_radius": 15.0,
					"priority": 0,
					"speed_multiplier": 1.5
				},
				"minecraft:equipment": {
					"table": "loot_tables/entities/fallen_hero_range_gear.json"
				},
				"minecraft:mark_variant": {
					"value": 1
				},
				"minecraft:shooter": {
					"aux_val": 25,
					"def": "minecraft:arrow"
				}
			}
		},
		"components": {
			"minecraft:annotation.break_door": {},
			"minecraft:behavior.hurt_by_target": {
				"priority": 1
			},
			"minecraft:behavior.look_at_player": {
				"look_distance": 6,
				"priority": 8,
				"probability": 0.02
			},
			"minecraft:behavior.nearest_attackable_target": {
				"entity_types": [
					{
						"filters": {
							"all_of": [
								{
									"test": "is_family",
									"subject": "other",
									"value": "monster"
								},
								{
									"test": "is_family",
									"subject": "other",
									"operator": "!=",
									"value": "skelegun"
								}
							]
						},
						"max_dist": 35
					}
				],
				"must_see": true,
				"must_see_forget_duration": 17.0,
				"priority": 2,
				"reselect_targets": true,
				"within_radius": 35.0
			},
			"minecraft:behavior.random_look_around": {
				"priority": 9
			},
			"minecraft:behavior.random_stroll": {
				"priority": 7,
				"speed_multiplier": 1
			},
			"minecraft:breathable": {
				"breathes_air": true,
				"breathes_water": true,
				"suffocate_time": 0,
				"total_supply": 15
			},
			"minecraft:collision_box": {
				"height": 1.9,
				"width": 0.6
			},
			"minecraft:conditional_bandwidth_optimization": {},
			"minecraft:damage_sensor": {
				"triggers": {
					"cause": "entity_explosion",
					"deals_damage": false
				}
			},
			"minecraft:despawn": {
				"despawn_from_distance": {}
			},
			"minecraft:experience_reward": {
				"on_death": "query.last_hit_by_player ? 50 : 0"
			},
			"minecraft:health": {
				"value": 50,
				"max": 50
			},
			"minecraft:hurt_on_condition": {
				"damage_conditions": [
					{
						"filters": {
							"test": "in_lava",
							"subject": "self",
							"operator": "==",
							"value": true
						},
						"cause": "lava",
						"damage_per_tick": 4
					}
				]
			},
			"minecraft:jump.static": {},
			"minecraft:movement": {
				"value": 0.35
			},
			"minecraft:movement.basic": {},
			"minecraft:navigation.walk": {
				"is_amphibious": true,
				"can_pass_doors": true,
				"can_walk": true,
				"can_break_doors": true
			},
			"minecraft:on_target_acquired": {
				"event": "become_angry_event",
				"target": "self"
			},
			"minecraft:physics": {},
			"minecraft:pushable": {
				"is_pushable": true,
				"is_pushable_by_piston": true
			},
			"minecraft:type_family": {
				"family": [
					"fallen_hero"
				]
			}
		},
		"events": {
			"become_angry_event": {
				"add": {
					"component_groups": [
						"angry"
					]
				}
			},
			"become_calm_event": {
				"remove": {
					"component_groups": [
						"angry"
					]
				}
			},
			"minecraft:entity_spawned": {
				"randomize": [
					{
						"weight": 3,
						"add": {
							"component_groups": [
								"fallen_hero_melee"
							]
						}
					},
					{
						"weight": 2,
						"add": {
							"component_groups": [
								"fallen_hero_range"
							]
						}
					},
					{
						"weight": 1,
						"add": {
							"component_groups": [
								"fallen_hero_magic"
							]
						}
					}
				]
			}
		}
	}
}