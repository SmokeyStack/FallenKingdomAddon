{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.stair": {
            "states": {
                "default": {
                    "transitions": [
                        {
                            "west": "query.relative_block_has_any_tag(1,0,0,'fk:stair_north') && query.relative_block_has_any_tag(0,0,0,'fk:stair_west')"
                        },
                        {
                            "north": "query.relative_block_has_any_tag(0,0,1,'fk:stair_east') && query.relative_block_has_any_tag(0,0,0,'fk:stair_north')"
                        },
                        {
                            "east": "query.relative_block_has_any_tag(-1,0,0,'fk:stair_south') && query.relative_block_has_any_tag(0,0,0,'fk:stair_east')"
                        },
                        {
                            "south": "query.relative_block_has_any_tag(0,0,-1,'fk:stair_west') && query.relative_block_has_any_tag(0,0,0,'fk:stair_south')"
                        }
                    ]
                },
                "west": {
                    "on_entry": [
                        "/structure load electrified_west ~~~"
                    ]
                },
                "north": {
                    "on_entry": [
                        "/structure load electrified_north ~~~"
                    ]
                },
                "east": {
                    "on_entry": [
                        "/structure load electrified_east ~~~"
                    ]
                },
                "south": {
                    "on_entry": [
                        "/structure load electrified_south ~~~"
                    ]
                }
            }
        }
    }
}