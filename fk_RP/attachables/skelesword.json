{
    "format_version": "1.10.0",
    "minecraft:attachable": {
        "description": {
            "identifier": "fk:skelesword",
            "materials": {
                "default": "entity_alphatest",
                "enchanted": "entity_alphatest"
            },
            "textures": {
                "default": "textures/items/skelesword_geo",
                "enchanted": "textures/misc/enchanted_item_glint"
            },
            "geometry": {
                "default": "geometry.skelesword"
            },
            "scripts": {
                "pre_animation": [
                    "v.main_hand = c.item_slot == 'main_hand';",
                    "v.head = c.item_slot == 'head';"
                ],
                "animate": [
                    {
                        "thirdperson_main_hand": "v.main_hand && !c.is_first_person"
                    },
                    {
                        "firstperson_main_hand": "v.main_hand && c.is_first_person"
                    }
                ]
            },
            "animations": {
                "thirdperson_main_hand": "animation.skelesword.thirdperson_main_hand",
                "firstperson_main_hand": "animation.skelesword.firstperson_main_hand",
                "firstperson_head": "animation.disable"
            },
            "render_controllers": [
                "controller.render.item_default"
            ]
        }
    }
}